<aura:component
  controller="PanelViewTrackMiscController"
  implements="flexipage:availableForAllPageTypes, force:hasRecordId"
  access="global"
>
  <!-- Variables -->
  <aura:attribute name="typeOfAssociate" type="string" default="" />
  <aura:attribute name="comment" type="string" />
  <aura:attribute name="result" type="boolean" />
  <aura:attribute name="softSkillsPass" type="boolean" />
  <aura:attribute name="recordingType" type="string" />
  <aura:attribute name="interviewStart" type="datetime" />
  <aura:attribute name="duration" type="integer" />
  <aura:attribute name="totalScore" type="integer" />
  <aura:attribute name="assessmentId" type="string" />

  <aura:attribute
    name="Assessment"
    type="PH_Assessment__c[]"
    description="Store panels to display in panel history section"
  />

  <!-- Events -->
  <aura:registerEvent
    name="updateAssessmentEvent"
    type="c:PanelViewTrackMiscEvent"
  />

  <!-- Handlers -->
  <aura:handler name="init" value="{! this }" action="{! c.init }" />
  <!-- <aura:handler
    event="c:PanelViewTrackMiscEvent"
    action="{!c.handleAssessment}"
  /> -->

  <!--Div Container Start -->
  <section id="container" class="slds-box">
    <div class="slds-grid slds-wrap slds-grid_align-space">
      <div class="slds-col">
        <h1><strong>Total Score: </strong>{!v.totalScore}</h1>
      </div>
    </div>

    <br />
    
    <!-- Grid Start -->
    <section class="slds-grid slds-wrap slds-grid_align-space">
      <div class="slds-col">
        <h1 class="text-center"><strong>Overall Comment</strong></h1>
        <lightning:textarea
          aura:id="richComment"
          placeholder="Enter comment here..."
          onblur="{!c.updateAssessment}"
          variant="label-hidden"
        >
        </lightning:textarea>
      </div>

      <div class="slds-col">
        <h1 class="text-center"><strong>Result:</strong></h1>
        <lightning:buttonGroup>
          <lightning:button
            aura:id="pass"
            class="buttonWidth"
            variant="neutral"
            label="P"
            title="result"
            onclick="{!c.handlePass}"
          />

          <lightning:button
            aura:id="fail"
            class="ml-0 buttonWidth"
            variant="neutral"
            label="F"
            title="Fail"
            onclick="{!c.handleFail}"
          />
        </lightning:buttonGroup>

        <h1 class="text-center"><strong>Soft Skills:</strong></h1>
        <lightning:buttonGroup>
          <lightning:button
            aura:id="softPass"
            class="buttonWidth"
            variant="neutral"
            label="P"
            title="Soft Skills Pass"
            onclick="{!c.softPass}"
          />

          <lightning:button
            aura:id="softFail"
            class="ml-0 buttonWidth"
            variant="neutral"
            label="F"
            title="Soft Skills Fail"
            onclick="{!c.softFail}"
          />
        </lightning:buttonGroup>
      </div>
    </section>

    <br />

    <section>
      <h1><strong>Recording Type</strong></h1>
      <lightning:select
        aura:id="select"
        class="dropboxWidth label-hidden"
        name="select"
        onchange="{!v.recordingType}"
        value="{!v.recordingType}"
        onblur="{!c.updateAssessment}"
      >
        <option value="">Select Type</option>
        <option value="Audio">Audio</option>
        <option value="Video">Video</option>
      </lightning:select>

      <br />

      <h1><strong>Type of Associate</strong></h1>
      <lightning:select
        aura:id="select"
        class="dropboxWidth label-hidden"
        name="select"
        onchange="{!v.typeOfAssociate}"
        value="{!v.typeOfAssociate}"
        onblur="{!c.updateAssessment}"
      >
        <option value="">Select Type</option>
        <option value="Bad Technical Skills">Bad Technical Skills</option>
        <option value="Bad Soft Skills">Bad Soft Skills</option>
        <option value="Good Technical Skills">Good Technical Skills</option>
        <option value="Good Soft Skills">Good Soft Skills</option>
      </lightning:select>

      <br />

      <h1><strong>Interview Started: </strong>{!v.interviewStart}</h1>
      <br />
      <h1><strong>Recording: </strong>{!v.interviewStart}</h1>
    </section>

    <!-- Grid End -->
    <br />

    <!-- Grid Start -->
    <section class="slds-grid slds-wrap slds-grid_align-space">
      <div class="slds-col slds-size_12-of-12 slds-large-size_12-of-12 mt-20">
        <h1 class="text-center"><strong>Panel History</strong></h1>
        <div class="slds-p-around_small">
          <ul>
            <aura:iteration items="{!v.Assessment}" var="a">
              <li type="dice">AssessmentName : {!a.Name}</li>
              <hr class="panel-history-margin" />
            </aura:iteration>
          </ul>
        </div>
      </div>
    </section>
    <!-- Grid End -->

    <br />

    <!-- Panel History -->
    <section>
      <!-- the container element determine the height of the datatable
      <div style="height: 300px">
        <lightning:datatable
          keyField="id"
          data="{! v.data }"
          columns="{! v.columns }"
          hideCheckboxColumn="true"
        />
      </div> -->
    </section>
  </section>
  <!-- Div Container End -->
</aura:component>
