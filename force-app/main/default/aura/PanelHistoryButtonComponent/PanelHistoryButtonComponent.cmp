<aura:component controller="AssessmentController" implements="flexipage:availableForRecordHome" access="global">
    <aura:attribute name="failedPanels" type="AssessmentLineItem__c[]"/>
    <aura:attribute name="assessment" type="PH_Assessment__c"/><!-- Value is passed in from PanelHistoryBox -->
    <aura:attribute name="contactId" type="ID"/><!-- Value is passed in from PanelHistoryBox -->
    
    <aura:handler name="init" value="{!this}" action="{!c.doInit}"/>
    
    <br/>
    <p><b>Topics to Repanel</b></p>
    <!-- Prints out each individual box to display --> 
    <lightning:layout multipleRows="true">
        <aura:iteration items="{!v.failedPanels}" var="fp">
            <lightning:layoutItem class="button-item">
                <div class="custom-box">
                    <c:PanelHistoryLink AssessmentLineItem="{!fp}"/>
				</div>
            </lightning:layoutItem>
        </aura:iteration>
    </lightning:layout>
    
</aura:component>